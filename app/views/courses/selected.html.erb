<div class="container-fluid">
  <div class="row">

    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-sm-10">

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <h3 class="panel-title"><%=@course.name %>选课情况</h3>
         <div style="position: absolute;right: 15px ;top: 0px">
           </div>
        </div>


        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>
              <th>学号</th>
              <th>姓名</th>
              <th>邮箱</th>
              <th>专业</th>
              <th>所在单位</th>
            </tr>

            <tbody>
            <% @student.each do |stu| %>
                <tr>
                  <td><%= stu.num %></td>
                  <td><%= stu.name %></td>
                  <td><%= stu.email %></td>
                  <td><%= stu.major %></td>
                  <td><%= stu.department %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>