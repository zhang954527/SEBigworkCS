<%= form_tag controller: "emails", action: "create", method: "post" do %>

    <div class="form-group">
      <!--<label for="sender" class="col-sm-3 control-label" >发件人</label>-->
    <div class="col-sm-9">
      <div class="input-group" >
        <!--<%= label_tag(:sender, "发件人")%>-->
        <div class="input-group-addon"><span class="glyphicon glyphicon-home"></span></div>
        <input id="sender" name="sender" type="text" class="form-control" placeholder="输入发件人姓名" value="<%= @current_user.name %>"/>
        <!--<%= text_field_tag :sender  %>-->
      </div>
    </div>
    </div>

    <div class="form-group"><div class="col-sm-9">
      <label ></label>
    </div></div>

    <div class="form-group">
      <!--<label for="recipient" class="col-sm-3 control-label">收件人</label>-->
      <div class="col-sm-9">
        <div class="input-group" >
          <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
          <input id="recipient" name="recipient" type="text" class="form-control" placeholder="输入收件人姓名" value="<%= @course.teacher.name %>"/>
          <!--<%= text_field_tag :recipient  %>-->
        </div>
      </div>
    </div>

    <div class="form-group"><div class="col-sm-9">
          <label ></label>
      </div></div>

    <div class="form-group">
      <!--<label for="subject" class="col-sm-3 control-label">信主题</label>-->
      <div class="col-sm-9">
        <div class="input-group" >
          <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
          <input id="subject" name="subject" type="text" class="form-control" placeholder="输入邮件的主题"/>
          <!--<%= text_field_tag :subject  %>-->
        </div>
      </div>
    </div>

    <div class="form-group"><div class="col-sm-9">
      <label ></label>
    </div></div>

    <div class="form-group">
      <!--<label for="body" class="col-sm-3 control-label">邮件内容</label>-->
      <div class="col-sm-9">
        <div class="input-group">
          <textarea id="body"  name="body" cols="130" class="form-control" placeholder="输入邮件的内容" rows="5" wrap="soft"></textarea>
        <!--<%= text_area_tag :body,class: 'form-control', placeholder: "输入授课方式"%>-->
        </div>
      </div>
    </div>

    <div class="form-group"><div class="col-sm-9">
      <label ></label>
    </div></div>

    <%= submit_tag '提交', class: "btn btn-success btn-block"%>
<% end %>
